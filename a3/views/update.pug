doctype html
html(lang="en")
head
    title Update #{info.Dish}
    script(type='text/javascript', src='/javascripts/t.js')
body  
    h2 Update Cuisine
    form(method='POST' action=`${info._id}`)
      div.form-group
        label(for='title') Dish:
      div
        input#puginput.form-control(type='text', placeholder='Dish' name='Dish' required='true' value=`${info.Dish}` style='width:100%')
      div.form-group
        label(for='author') Ingredient:
      div
        input#puginput.form-control(type='text', placeholder='Ingredient' name='Ingredient' required='true' value=`${info.Ingredient}` style='width:100%')
      div.form-group
        label(for='author') IMGlink:
      div
        input#puginput.form-control(type='text', placeholder='IMGlink' name='IMGlink' required='true' value=`${info.IMGlink}` style='width:100%')  
      div.form-group
        label(for='summary') Comment:
      div
        textarea#txtarea.form-control(type='textarea', placeholder='Comment' name='Comment' required='true' style='width:100%; height:200px') #{info.Comment}
      
      input(type='submit', value='Submit')
